{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "dist",
    "lib": ["dom", "dom.iterable", "ES2018"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "jsx": "react",
    "rootDir": "src"
  },
  "include": ["src"]
}
